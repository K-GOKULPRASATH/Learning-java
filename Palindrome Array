
class Solution {
    public static boolean isPerfect(int[] arr) {
        // code here
        int[] store = new int[arr.length];
        int a=0;
        for(int i= arr.length-1; i>=0; i--){
            store[a] = arr[i];
            a++;
        }
         boolean isPalindrome = Arrays.equals(arr, store);
         return isPalindrome;
    }
}
